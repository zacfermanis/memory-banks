{
  "name": "@zacfermanis/memory-bank",
  "version": "2.0.0",
  "description": "A CLI tool to initialize memory bank projects with AI-powered development documentation and cursor rules for TypeScript/React, Lua/Love2D, and Java/Spring Boot development",
  "main": "dist/index.js",
  "bin": {
    "init-memory-bank": "dist/index.js"
  },
  "files": [
    "dist",
    "src/developmentGuides",
    "src/cursorrules",
    "README.md",
    "LICENSE",
    "jest.config.js",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "memory-bank",
    "cli",
    "development",
    "documentation",
    "cursor",
    "ai",
    "productivity",
    "typescript",
    "lua",
    "java",
    "spring-boot",
    "web-development"
  ],
  "author": "Zac Fermanis <zacfermanis@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zacfermanis/memory-banks.git"
  },
  "bugs": {
    "url": "https://github.com/zacfermanis/memory-banks/issues"
  },
  "homepage": "https://github.com/zacfermanis/memory-banks#readme",
  "dependencies": {
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
